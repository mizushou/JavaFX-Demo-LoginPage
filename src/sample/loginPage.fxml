            <Button fx:id="authButton" mnemonicParsing="false" onAction="#authButtonClicked" text="Sign in" />
         </children>
      </HBox>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Welcome" GridPane.columnSpan="2">
         <font>
            <Font size="20.0" />
         </font>
      </Text>
      <Text fx:id="outputText" strokeType="OUTSIDE" strokeWidth="0.0" GridPane.columnIndex="1" GridPane.rowIndex="6" />
